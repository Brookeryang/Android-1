<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="120dp"
  android:layout_height="wrap_content"
  android:layout_marginRight="10dp"
  android:background="@drawable/circle_tag"
  android:paddingBottom="20dp"
  xmlns:tools="http://schemas.android.com/tools">
  <ImageView
    android:id="@+id/dele"
    android:src="@drawable/dele"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:scaleType="centerInside"
    android:layout_alignParentRight="true"
    />
  <ImageView
    android:id="@+id/pic"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="#e0e5eb"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:scaleType="fitXY"/>
  <TextView
    tools:text="营养科"
    android:textColor="@color/text_title"
    android:textSize="15sp"
    android:id="@+id/subject"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:layout_below="@+id/pic"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:maxLines="1"
    android:ellipsize="end"/>
  <TextView
    tools:text="糖妈妈的食谱1糖妈妈的食谱1糖妈妈的食谱1糖妈妈的"
    android:id="@+id/title"
    android:textColor="@color/hint"
    android:textSize="12sp"
    android:layout_below="@+id/subject"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:maxLines="2"
    android:ellipsize="end"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"/>
  <ImageView
    android:id="@+id/plus"
    android:src="@drawable/addfood1"
    android:layout_below="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="27dp"
    android:scaleType="center"
    android:background="@drawable/recycle_item_default"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:visibility="gone"
    />
</RelativeLayout>
