<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            >
            <!--background-->
            <solid android:color="@color/province_line_border"/>
            <!-- 设置按钮的4个角为弧形 -->
            <stroke
                android:width="1dp"
                android:color="@color/province_line_border"
                >
            </stroke>
            <!-- android:radius 弧形的半径 -->
            <corners
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topRightRadius="4dp"
                />
            <!-- padding: Button 里面的文字与Button边界的间隔 -->
            <padding
                android:left="1px"
                android:top="1px"
                android:right="1px"
                android:bottom="1px"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            >
            <!--background-->
            <solid android:color="@color/title_click"/>
            <!-- 设置按钮的4个角为弧形 -->
            <stroke
                android:width="1dp"
                android:color="@color/province_line_border">

            </stroke>
            <!-- android:radius 弧形的半径 -->
            <corners
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topRightRadius="4dp"
                />
            <!-- padding: Button 里面的文字与Button边界的间隔 -->
            <padding
                android:left="1px"
                android:top="1px"
                android:right="1px"
                android:bottom="1px"
                />
        </shape>
    </item>
</selector>